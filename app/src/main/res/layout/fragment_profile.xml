<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:background="@drawable/bg_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bg_card_white"
            android:orientation="horizontal"
            android:layout_marginTop="120dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:paddingVertical="25dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/baseline_person_24_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="Andika Pomalingo"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/monsembold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_card_white"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:paddingVertical="25dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/baseline_mail_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="andikapomalingo@gmail.com"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/monsembold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:paddingVertical="20dp"
            android:textSize="18sp"
            android:text="Logout"
            android:layout_marginBottom="25dp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/monsembold"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/bg_button_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_person_24"
        app:civ_border_width="9dp"
        android:layout_marginTop="50dp"
        app:civ_border_color="@color/third"
        app:civ_circle_background_color="@color/third"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>